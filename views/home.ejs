<%- include('partials/header') %>

<div class="container-fuild">
  
  <div class="row py-1 justify-content-center content">
    <div class="col-xxl-2 col-xl-2 col-lg-3 col-sm-3 col-4">
      <h1 class="mb-0">todolist</h1>
    </div>
    <div class="col-xxl-1 col-xl-2 col-lg-2 col-sm-3 col-4 text-end align-self-center">
      
      <a class="btn" href="/logout">Log out</a>
    </div>
  </div>

  <div class="row mt-5 justify-content-center">
    <div class="col-xxl-3 col-xl-4 col-lg-5 col-sm-6 col-8 content">
      <% newListItems.forEach(function(item){ %>

      <div class="row py-3 bottom-line">
        <form class="my-2" action="/home/delete" method="post">
              <!-- onChange="this.form.submit()" -->
              <input class="form-check-input" type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()"/>
              <label class="form-check-label item-label" for="checkbox"><%=item.content%></label>
        </form>
      </div>

      <% }) %>

      <div class="row py-2">
        <form class="my-2" action="/home" method="post">
          <div class="row">
            <div class="col-10">
              <input class="form-control input-new-item" type="text" name="newItem" placeholder="New Item" autocomplete="off" />
            </div>
            <div class="col-2">
              <button class="btn btn-primary btn-new-item" type="submit"><i class="fa fa-plus"></i></button>
            </div>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
