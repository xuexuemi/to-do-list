<%- include('partials/header') %>

<div class="row py-2 justify-content-center content">
  <div class="col-3">
    <h2 class="mb-0">todolist</h2>
  </div>
  <div class="col-2 text-end align-middle">
    <a class="btn" href="/logout">Log out</a>
  </div>
</div>

<div class="row mt-5 justify-content-center">
  <div class="col-5 content">
    <% newListItems.forEach(function(item){ %>

    <div class="row py-3 bottom-line">
      <form class="my-2" action="/home/delete" method="post">
            <!-- onChange="this.form.submit()" -->
            <input class="form-check-input" type="checkbox" name="checkbox" value="<%=item._id%>" onChange="this.form.submit()"/>
            <label class="form-check-label item-label" for="checkbox"><%=item.content%></label>
      </form>
    </div>

    <% }) %>

    <div class="row py-2">
      <form class="my-2" action="/home" method="post">
        <div class="row">
          <div class="col-11">
            <input class="form-control input-new-item" type="text" name="newItem" placeholder="New Item" autocomplete="off" />
          </div>
          <div class="col-1 p-0">
            <button class="btn btn-primary btn-new-item" type="submit">+</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
