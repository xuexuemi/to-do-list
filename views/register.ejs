      <div class="row h-100 justify-content-center">
        <div class="col-4 px-5 pb-2 m-auto text-center content">

          <h1 class="mt-4">todolist</h1>

          <div class="row bottom-line">
            <form action="/register" method="post">
              <input class="form-control p-2 mt-3" type="email" name="username" placeholder="Email address">
              <input class="form-control p-2 mt-3" type="password" name="password" placeholder="Password">
              <div class="row mx-0">
                <button type="submit" class="btn btn-primary px-5 py-1 mt-3 mb-4">Sign up</button>
                </div>
            </form>
          </div>

          <p class="mt-3">
            Have an account?  
            <a class="text-info" href="/">Sign in</a>
          </p>
        </div>
      </div>
